<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
          <div class="user-infor-container">
        <form action="create-user" method="POST">
            <div>Create A New User</div>
            <div class="mb-3 col-6 mt-3">
              <label for="email" class="form-label">Email:</label>
              <input type="email" class="form-control" name="email" required />
            </div>
            <div class="mt-3 col-6"></div>
            <div class="mb-3 col-6 mt-3">
              <label for="pwd" class="form-label">Password:</label>
              <input
                type="password"
                class="form-control"
                name="password"
                required
              />
            </div>
            <div class="mt-3 col-6"></div>
            <div class="col-6 pb-3">
              <label for="pwd" class="form-label">Username:</label>
              <input
                type="text"
                class="form-control"
                name="username"
                required
              />
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            
        </form>
      </div>
    </div>
    <div className="table-users">
      <h3>Table users:</h3>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">UserName</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% userList.forEach(function(item, index){ %>
            <tr>
              <th scope="row"><%= item.id %></th>
              <td><%= item.email %></td>
              <td><%= item.username %></td>
              <td>
                <a class="btn btn-warning" href="/update-user/<%= item.id %>">
                  Edit
                </a>
                <form style="display: inline" action="/delete-user/<%= item.id %>" method="POST">
                  <button class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  </body>
</html>
